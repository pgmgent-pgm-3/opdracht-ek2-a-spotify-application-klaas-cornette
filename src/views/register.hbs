<section class="auth-container register">
  <div class="register__text">
    <h4>Registeer</h4>
  <p><a href="/login">Login</a></p>
  </div>
  
  {{>form-errors this}}
  <form method="post" name:"role" class="make">
    {{#each inputs}}
      {{>form-input this}}
    {{/each}}
    <div class="footer-container">
      <input type="reset" class="btn btn-tertiary" value="Clear">
      <input type="submit" class="btn btn-primary" value="Register">
    </div>
  </form>
</section>